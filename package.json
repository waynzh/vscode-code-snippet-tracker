{
  "publisher": "waynzh",
  "name": "ai-code-tracker",
  "displayName": "AI Code Tracker",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.3.0",
  "description": "Track and mark AI generated code in your frontend projects",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/waynzh",
  "homepage": "https://github.com/waynzh/vscode-ai-code-tracker#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/waynzh/vscode-ai-code-tracker"
  },
  "bugs": {
    "url": "https://github.com/waynzh/vscode-ai-code-tracker/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:vue"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ai-code-tracker.generateReport",
        "title": "AI Code Tracker: Generate Project Report"
      }
    ],
    "configuration": {
      "title": "AI Code Tracker",
      "properties": {
        "aiCodeTracker.modificationThreshold": {
          "type": "number",
          "default": 70,
          "description": "Percentage threshold for removing AI code markers"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "dependencies": {
    "diff": "^5.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.1",
    "@antfu/ni": "^0.21.12",
    "@types/diff": "^5.1.0",
    "@types/node": "^20.14.2",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^2.27.0",
    "bumpp": "^9.4.1",
    "eslint": "^9.5.0",
    "esno": "^4.7.0",
    "pnpm": "^9.3.0",
    "rimraf": "^5.0.7",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  }
}
